<main id="common-home" class="container">


    <!-- ULTIMOS CAMBIOS -->

    <section class="last-posts row">
        <header><h2 class="text-center">Ultimos cambios</h2></header>
        {% set i = 0 %}
        {% for category in categories %}
            {% if i%2 == 0 %}
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="img-thumbnail-1">
                        <img class="img-responsive"
                             src="{{ category.image }}">
                        <div class="caption text-center">
                            {{ category.description }}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="img-thumbnail-2">
                        <img class="img-responsive"
                             src="{{ category.image }}">
                        <div class="caption text-center">
                            {{ category.description }}
                        </div>
                    </div>
                </div>
            {% endif %}

            {% set i = i + 1 %}
        {% endfor %}
    </section>


    <!-- END ULTIMOS CAMBIOS -->

    <!-- LIST VIDEOS -->

